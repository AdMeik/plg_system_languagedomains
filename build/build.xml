<?xml version="1.0" encoding="UTF-8"?>
<project name="plg_system_languagedomains" default="build" basedir=".">

    <!-- General variable definitions -->
    <exec command="date +%Y-%m-%d" outputProperty="date" />
    <exec command="echo /tmp/build.$$" outputProperty="tmp" />
    <exec command="cd ../;pwd" outputProperty="root" />
    <echo>Note: root is ${root}</echo>

    <property name="source" value="${root}/source" />
    <property name="package_dir" value="${root}/package" />
    <property name="tmp_dir" value="${root}/build/tmp" />
    <property name="gpl" value="${root}/build/gpl-3.0.txt" />

    <!-- Public Target: build -->
    <target name="build" description="Build Joomla! package">

        <exec command="mkdir -p ${tmp_dir}" />

        <copy todir="${tmp_dir}">
            <fileset dir="${source}/plugins/system/languagedomains">
                <include name="**" />
            </fileset>
            <fileset dir="${source}/administrator/language/en-GB">
                <include name="**" />
            </fileset>
        </copy>
        <copy file="${gpl}" tofile="${tmp_dir}/LICENSE.txt" overwrite="true" />

        <exec command="rm ${package_dir}/plg_system_languagedomains.zip" />
        <zip destfile="${package_dir}/plg_system_languagedomains.zip">
            <fileset dir="${tmp_dir}">
                <include name="**/**" />
            </fileset>
        </zip>

        <exec command="rm ${package_dir}/plg_system_languagedomains.tgz" />
        <tar destfile="${package_dir}/plg_system_languagedomains.tgz" compression="gzip">
            <fileset dir="${tmp_dir}">
                <include name="**/**" />
            </fileset>
        </tar>
    </target>

</project>
